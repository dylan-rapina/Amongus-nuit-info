<!DOCTYPE html>
<html>
<head>
  <title>Partie Among Us !! </title>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="/stylesheets/main.css" />
  <link rel="icon" type="image/png" href="/images/IconeWeb.PNG" />
  <!--<%- include ../partials/header.ejs %> -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"   ></script>
  <!--<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>-->

  <script>
    function clickHandlerImpostor(id) {
      var mySound;
      mySound = new sound("/images/kill.mp3");
      mySound.play();
       changeImageDead(id);
       document.getElementById("slay-text").innerHTML = "It was The Impostor !";
    }

    function clickHandlerCrewMate(id) {
      var mySound;
      mySound = new sound("/images/kill.mp3");
      mySound.play();
       changeImageDead(id);
       document.getElementById("slay-text").innerHTML = "It was a CrewMate !";
    }
    

    function changeImageDead(id) {

      if (document.getElementById(id).src == "/images/player-red.png")
      {
          document.getElementById(id).src = "/images/player-red-dead.png";
      }
      else 
      {
          document.getElementById(id).src = "/images/player-red-dead.png";
      }
    }

    function sound(src) {
      this.sound = document.createElement("audio");
      this.sound.src = src;
      this.sound.setAttribute("preload", "auto");
      this.sound.setAttribute("controls", "none");
      this.sound.style.display = "none";
      document.body.appendChild(this.sound);
      this.play = function(){
        this.sound.play();
      }
      this.stop = function(){
        this.sound.pause();
    }
}

  </script>



</head>

<body>  
  <div>
    <img src="/images/player-red.png" class="test" id="character1" onclick="clickHandlerImpostor(id)"/>
    <img src="/images/player-red.png" class="test1" id="character2" onclick="clickHandlerCrewMate(id)"/>
  </div>

  <div class="footer">
    <p class="slay-text" id="slay-text"></p>
  </div>
  
</body>
</html>