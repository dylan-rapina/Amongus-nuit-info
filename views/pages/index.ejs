  <script>

    function clickHandlerImpostor(id, color) {
      var mySound;
      mySound = new sound("/images/kill.mp3");
      mySound.play();
       changeImageDead(id, color);
       document.getElementById("slay-text").innerHTML = "It was The Impostor !";
       setTimeout(function(){
